{
  "name": "idv-qa",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf test-results/",
    "ui": "playwright test --ui",
    "test": "npm run clean:allure && npx playwright test",
    "api:test": "DEBUG=pw:api npx playwright test login.spec.ts",
    "watch:mode": "PWTEST_WATCH=1 npx playwright test",
    "open:inspector": "PWDEBUG=1 npx playwright test login.spec.ts",
    "specific:test:webkit": "npx playwright test --project=webkit login.spec.ts",
    "lint:tests": "eslint tests/**.ts --fix",
    "define:workers": "npx playwright test tests --workers 1",
    "clean:allure": "rm -rf allure-results/ allure-report/",
    "open:allure": "node --no-warnings ./node_modules/.bin/allure generate allure-results --clean && node --no-warnings ./node_modules/.bin/allure open allure-report",
    "grep:smoke": "npx playwright test --grep @smoke",
    "grep:invert": "npx playwright test --grep-invert @smoke"
  },
  "keywords": [],
  "author": "Marcelo Costa",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.4.0",
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "allure-commandline": "^2.32.0",
    "allure-playwright": "^3.0.9",
    "dotenv": "^16.4.7",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jiti": "^2.4.2",
    "prettier": "^3.4.2"
  }
}
